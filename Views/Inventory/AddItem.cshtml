@{
}
@model InventoryManagement.Models.Item

<h1>Add Item</h1>
<div>
  <form method="post" asp-controller="Inventory" asp-action="AddItem">
    <div>
      <label class="form-label">Item</label>
      <input type="text" asp-for="itemName" class="form-control">
    </div>
    <div>
      <label class="form-label">Description</label>
      <input type="text" asp-for="itemDesc" class="form-control">
    </div>
    <div>
      <label class="form-label">Count</label>
      <input type="number" asp-for="itemCount" class="form-control">
    </div>
    <div>
      <label class="form-label">Price</label>
      <input type="number" asp-for="itemVal" step="0.01" class="form-control">
    </div>
    <div>
      <button type="submit" class ="btn btn-primary">Save</button>
    </div>
  </form>
</div>
