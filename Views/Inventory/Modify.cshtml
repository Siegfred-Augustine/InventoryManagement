@{
}
@model InventoryManagement.Models.Item

<h1>Edit Item</h1>
<div>
  <form method="post" asp-controller="Inventory" asp-action="Modify">
    <input type="hidden" asp-for="id" />
    <div>
      <label class="form-label">Item</label>
      <input value=@Model.itemName type="text" asp-for="itemName" class="form-control">
    </div>
    <div>
      <label class="form-label">Description</label>
      <input value=@Model.itemDesc type="text" asp-for="itemDesc" class="form-control">
    </div>
    <div>
      <label class="form-label">Count</label>
      <input value=@Model.itemCount type="number" asp-for="itemCount" class="form-control">
    </div>
    <div>
      <label class="form-label">Price</label>
      <input value=@Model.itemVal type="number" asp-for="itemVal" step="0.01" class="form-control">
    </div>
    <div>
      <button type="submit" class ="btn btn-primary">Save</button>
    </div>
  </form>
</div>
